{
  "name": "@mono/example",
  "version": "1.0.0",
  "description": "a guide to setup a monorepository",
  "author": "Alexander KÃ¤mmerer <atothek1@gmail.com>",
  "homepage": "https://github.com/atothek1/monorepo-setup#readme",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/atothek1/monorepo-setup.git"
  },
  "workspaces": [
    "packages/apps/*",
    "packages/libs/*",
    "packages/mods/*"
  ],
  "scripts": {
    "clean": "rimraf ./node_modules && lerna clean",
    "prebootstrap": "yarn clean",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "prefull": "lerna run type --concurrency 4 --stream --exclude-dependents && lerna run lint --concurrency 4 --stream --exclude-dependents && lerna run test --concurrency 4 --stream --exclude-dependents",
    "full": "lerna run build --concurrency 4 --stream --exclude-dependents",
    "type": "lerna run type --concurrency 1 --stream --since HEAD --exclude-dependents",
    "lint": "eslint ./ --ignore-pattern '/packages/*' --config .eslintrc && yarn lint:pkgs",
    "lint:fix": "eslint ./ --ignore-pattern '/packages/*' --config .eslintrc --fix && yarn lint:pkgs-fix",
    "lint:pkgs": "lerna run lint --concurrency 1 --stream --since HEAD --exclude-dependents",
    "lint:pkgs-fix": "lerna run lint:fix --concurrency 1 --stream --since HEAD --exclude-dependents",
    "test": "lerna run test --concurrency 1 --stream --since HEAD --exclude-dependents",
    "ci": "yarn type && yarn lint:fix && yarn test",
    "build:example-app": "lerna run build --scope @mono/example --stream",
    "start:example-app": "lerna run start --scope @mono/example --stream",
    "styleguide": "styleguidist server --config ./config/styleguide.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn ci",
      "commit-msg": "commitlint --config ./config/commitlint.config.js --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-react-jsx": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@commitlint/config-lerna-scopes": "^12.1.4",
    "@statoscope/webpack-plugin": "^5.6.2",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.1.1",
    "core-js": "^3.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-import-resolver-custom-alias": "^1.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^4.3.8",
    "jest-styled-components": "^7.0.4",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.7",
    "react-docgen-typescript": "^1.22.0",
    "react-styleguidist": "^11.1.7",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.0",
    "terser-webpack-plugin": "^5.1.3",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.39.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "styled-components": "^5.3.0"
  }
}
