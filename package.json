  "repository": {
    "type": "git",
    "url": "https://github.com/atothek1/monorepo-setup.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean-install": "lerna clean && lerna bootstrap",
    "build": "lerna run build --stream",
    "type": "lerna run type --stream",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream",
    "quality": "npm run type && npm run lint && npm run test",
    "build:example-app": "lerna run build --scope @mono/example-app --stream",
    "start:example-app": "lerna run start --scope @mono/example-app --stream"
  },
  "lint-staged": {
    "packages/**/*.{js,ts,tsx}": [
      "lint",
      "type"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run quality",
      "commit-msg": "commitlint --config ./config/commitlint.config.js --env HUSKY_GIT_PARAMS"
    }
  },
